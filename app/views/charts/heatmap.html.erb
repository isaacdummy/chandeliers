<div id="container" style="width:100%; height:400px;">
</div>

<script>
  $(function() {
    var myChart = Highcharts.chart('container', {
      chart: {
        type: 'heatmap'
      },

      title: {
        text: 'Heat Map'
      },

      xAxis: {
        categories: <%= raw @names %>,
        title: 'Killer'
      },

      yAxis: {
        categories: <%= raw @names %>,
        title: 'Victim'
      },

      colorAxis: {
          min: 0,
          minColor: '#FFFFFF',
          maxColor: Highcharts.getOptions().colors[0]
      },

      series: [{
        name: 'Kills',
        borderWidth: 1,
        data: <%= @heatmap_data %>,
        dataLabels: {
          enabled: true,
          color: '#000000'
        }
      }]
    });
  });
</script>

<% if false %>
  <script>
    $(function () {
        var myChart = Highcharts.chart('container', {
            chart: {
                type: 'bar'
            },
            title: {
                text: 'Fruit Consumption'
            },
            xAxis: {
                categories: ['Apples', 'Bananas', 'Oranges']
            },
